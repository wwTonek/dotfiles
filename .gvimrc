
" /////////////////////////////////////////////////////////
" 各種オプションの設定
" /////////////////////////////////////////////////////////
" 縦幅 デフォルトは24
set lines=40
" 横幅 デフォルトは80
set columns=120
" カラースキーマの指定
let g:hybrid_use_Xresources = 1
colorscheme hybrid
" フォント設定
set guifont=Ricty_Diminished:h18
" フォントの描画方法を変更する
set rop=type:directx
" /////////////////////////////////////////////////////////


" /////////////////////////////////////////////////////////
" Plugin毎の設定
" /////////////////////////////////////////////////////////

" =========================================================
" lightline.vimの設定
" =========================================================
let g:lightline = {}
let g:lightline.colorscheme = 'hybrid'
" =========================================================
" /////////////////////////////////////////////////////////
